#include "main.h"
/**
* isalpha(c) is a function in C which can be used to check if the *passed character is an alphabet or not
*@c: The Character to check
*
* Return: 1 if c is lowercase, 0 otherwise
*/
int _isalpha(int c)
{
if ((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z'))
return (1);
return (0);
}
