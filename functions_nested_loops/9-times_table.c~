#include "main.h"

/**
* times_table - Prints the 9 times table, starting with 0.
*/
void times_table(void)
{
int row, col, product;

for (row =0; row <= 9 row++)
{
for (col = 0; col <= 9; col++
{
product = row * col;

if (product < 10)
{
_putchar(' ');
}
if (product >= 10)
{
_putchar((product / 10) + 'O');

}
_putchar((product %10) + '0');

if (col < 9)
	    {
_putchar(',');

_putchar(' ');
}
}
putchar('\n');
}
}
